<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>

        <script>
            $(function() {
                $(window).on('load', function() {
                    var posts = $('#profilePosts');
                    // load the page with blog posts
                    $.getJSON("/api/profile/blog_post", function(data) {
                        $.each(data, function(key, val) {
                            posts.append('<li class="list-group-item"><a href="/blog_post/' + val.post_id + '">' + val.title + '<a href="/compose/' + val.post_id + '" class="pull-right" >Edit</a></a></li>');
                        });
                    });
                });
            });
        </script>

</head>

<body>

    <% include ../partials/nav.ejs %>

        <div class="container">
            <div id="profilePosts" class="list-group">
            </div>
        </div>

</body>

</html>